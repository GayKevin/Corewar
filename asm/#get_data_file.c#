#include "tool.h"
#include "op.h"

int		get_name(t_pars *s, header_t *o)
{
  int		n;
  int		i;

  n = 0;
  i = 0;
  while (s->line[i] != '\"' && i < s->size_line)
    i++;
  if (i == s->size_line)
    {
      my_err("invalid syntax missing ‘\"’", s);
	return (-3);
    }
  else
    {
      i++;
      while (s->line[i] != '\"' && i < s->size_line)
	o->prog_name[n++] = s->line[i++];
      if (s->line[i] != '\"')
	{
	  my_err("invalid syntax missing ‘\"’", s);
	  return (-3);
	}
      while (n != PROG_NAME_LENGTH+1)
	o->prog_name[n++] = '\0';
      my_putstr_infile(o->prog_name, 1, PROG_NAME_LENGTH+1);
      my_putchar('\n');
    }
}

